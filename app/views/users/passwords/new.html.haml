%section.d-flex.justify-content-center
 %section.card.bg-light.col-md-5.p-0.border-warning
  %h2{:class => 'card-header text-left'} Forgot your password?
  %section.card-body
   = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    = f.error_notification
    .form-inputs
     = f.input :email,                       
      required: true,                       
      autofocus: true,                      
      input_html: { autocomplete: "email" } 
    .form-actions
     = f.button :submit, "Send me reset password instructions",class:"btn btn-warning btn-block"
   = render "users/shared/links"
